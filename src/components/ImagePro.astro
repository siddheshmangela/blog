---
import { Picture } from '@astrojs/image/components';

export interface Props {
  name: string;
  widths?: number[];
  sizes?: string;
  class?: string;
  alt?: string;
}

const url = Astro.url.pathname.replace(/\/$/, '').substring(1);
const {
  name,
  widths = [400, 800, 1100],
  sizes = '(max-width: 760px) 100vw, 800px',
  ...attrs
} = Astro.props;

let { alt = '' } = Astro.props;

alt = alt ? alt : name;
---

<div class="ImagePro">
  <Picture
    src={import(`../images/${url}/${name}`)}
    widths={widths}
    sizes={sizes}
    alt={alt}
    {...attrs}
  />
</div>

<style lang="scss">
  .ImagePro {
    :global(img) {
      @media (max-width: 1100px) {
        width: 100%;
        height: auto;
      }

      width: inherit;
      height: var(--image-height);
      max-width: 100%;
    }

    :global(picture) {
      display: block;
      line-height: 0;
    }
  }
</style>
