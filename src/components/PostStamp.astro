---
export interface Props {
  pubDate: string;
}

const { pubDate } = Astro.props;
---

<time datetime={pubDate}>
  {
    new Date(pubDate).toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>

<style lang="scss">
  time {
  }
</style>
