---
import HeaderLink from './HeaderLink.astro';
---

<nav>
  <HeaderLink href="/">
    <img src="/favicon.svg" alt="Home" />
  </HeaderLink>
</nav>

<style lang="scss">
  nav {
    position: absolute;
    top: 16px;
    left: 16px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;

    @media (min-width: 1100px) {
      position: fixed;
      top: 32px;
      left: 32px;
      width: 48px;
      height: 48px;
    }

    img {
      display: block;
      height: auto;
      width: 40px;
      filter: sepia(3) brightness(0.88);

      @media (min-width: 1100px) {
        width: 48px;
      }
    }

    @media print {
      display: none;
    }
  }
</style>
