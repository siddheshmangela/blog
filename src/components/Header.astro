---
import HeaderLink from './HeaderLink.astro';
---

<nav>
  <HeaderLink href="/">
    <img src="/favicon.svg" alt="Home" />
  </HeaderLink>
</nav>

<style lang="scss">
  nav {
    position: fixed;
    top: 16px;
    left: 16px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;

    img {
      display: block;
      height: auto;
      width: 40px;
      filter: brightness(0.9);
    }
  }
</style>
